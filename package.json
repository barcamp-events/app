{
  "name": "barcamp-events",
  "version": "1.0.0",
  "description": "The app for barcamp.events",
  "main": "index.js",
  "scripts": {
    "develop:ios": "npx cap open ios",
    "develop:android": "npx cap open android",
    "develop:electron": "npx cap open electron",
    "build": "stencil build",
    "build.prod": "NODE_ENV=production stencil build --prod && npx cap copy",
    "start": "stencil build --dev --watch --serve",
    "start.prod": "stencil build --prod --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate"
  },
  "keywords": [
    "capacitor",
    "mobile"
  ],
  "engines": {
    "node": "^16 || ^18"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/puppeteer": "^5.4.6",
    "jest": "^28.1.3",
    "puppeteer": "^16.1.0",
    "rollup-plugin-replace": "^2.2.0",
    "workbox-build": "^6.5.4"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@capacitor/android": "^2.4.0",
    "@capacitor/cli": "^2.4.0",
    "@capacitor/core": "^2.4.0",
    "@capacitor/ios": "^2.4.0",
    "@midwest-design/audio": "^0.1.17",
    "@midwest-design/common": "^0.1.2",
    "@midwest-design/core": "^0.1.17",
    "@midwest-design/device": "^0.1.17",
    "@midwest-design/forms": "^0.1.17",
    "@midwest-design/helpers": "^0.1.17",
    "@midwest-design/media": "^0.1.17",
    "@midwest-design/motion": "^0.1.17",
    "@stencil-community/router": "^1.0.2",
    "@stencil/core": "^2.17.3",
    "@stencil/store": "^2.0.0",
    "async-delay": "^1.0.3",
    "dayjs": "^1.8.16",
    "firebase": "^9.9.2",
    "gravatar": "^1.8.0",
    "konami-code": "^0.3.0",
    "rollup-plugin-dotenv": "^0.3.0",
    "slugify": "^1.3.5",
    "stencil-router-v2": "^0.6.0"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
